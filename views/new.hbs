<div class="input-form-wrapper">
	{{#if errors}}
		<div class="alert alert-danger" role="alert">
			<ul>
				{{#each errors}}
					<li>{{this}}</li>
				{{/each}}
			</ul>
		</div>
	{{/if}}
	<form action="{{baseUrl}}{{model.url}}" method="POST">
		{{#each model.fields }}
			{{#if this.model }}
				<div class="form-group">
					<label>
						{{this.display}}
						<select class="form-control" name="{{this.name}}">
							{{#each this.items}}
								<option value="{{this.id}}">{{this}}</option>
							{{/each}}
						</select>
					</label>
				</div>		
			{{else}}
				<div class="form-group">
					<label>{{this.display}}
							<input class="form-control" type="{{this.type}}" name="{{this.name}}" {{#if ../presetData}} value="{{lookup ../presetData this.name}}" {{/if}}/>
					</label>
				</div>
			{{/if}}
		{{/each}}

		<div class="form-group">
			<input class="btn btn-success" type="submit" value="Save"/>
		</div>
	</form>
</div>